<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Voting</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.voting_id %></td>
        <td><%= question.title %></td>
        <td><%= question.description %></td>
        <td><%= link_to 'Show', voting_question_path(@voting, question) %></td>
        <td><%= link_to 'Edit', edit_voting_question_path(@voting, question) %></td>
        <td><%= link_to 'Destroy', voting_question_path(@voting, question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_voting_question_path(@voting) %>
