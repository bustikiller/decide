<h1> <%= t('groups.import') %> </h1>

<p><%= t('messages.group_csv_import.step_0', member_type: t_member_type) %></p>

<%= content_tag(:ol) do
  (1..6).map do |step|
    content_tag :li, t("messages.group_csv_import.step_#{step}", member_type: t_member_type)
  end.inject(:+)
end %>

<div class="actions">
  <%= button_to t('groups.csv_template_download'), bulk_upload_template_organization_groups_path(@organization), method: :get, context: :primary %>
</div>

<div class="csv-import">
  <%= form_for(:group, layout: :basic) do |f| %>
    <%= f.text_area :import %>

    <%= f.submit t('submit') %>
  <% end %>

</div>
