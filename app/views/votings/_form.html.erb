<%= form_for(@voting, layout: :basic) do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :description %>

  <%= label_tag :status%>
  <%= f.collection_select :status, Voting.statuses, :first, :first, {}, {:class => 'form-control'} %>

  <%= f.check_box :secret %>
  <br>
  <%= f.submit 'Submit' %>
<% end %>